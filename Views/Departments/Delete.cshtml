@model Padiatric.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Padiatric</title>
    <style>
        body {
            background-color: #f4f7fc;
            color: #333;
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .containerD {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            flex-grow: 1;
        }

        .form-card {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-card h4 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .form-group dd {
            margin-left: 20px;
        }

        .button-group {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            font-size: 1.1rem;
            padding: 12px 25px;
            border-radius: 5px;
            width: auto;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-dark {
            background-color: #343a40;
            color: white;
            font-size: 1.1rem;
            padding: 12px 25px;
            border-radius: 5px;
            width: auto;
        }

        .btn-dark:hover {
            background-color: #23272b;
        }
    </style>
</head>
<body>

    <div class="containerD">
        <div class="form-card">
            <h4>Delete Department</h4>
            <hr />
            <p>Are you sure you want to delete this Department?</p>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HastaSayisi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HastaSayisi)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BosyatakSayisi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BosyatakSayisi)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="button-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-dark" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
