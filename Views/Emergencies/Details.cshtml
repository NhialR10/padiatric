@model Padiatric.Models.Emergency

@{
    ViewData["Title"] = "Emergency Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .containerD {
            max-width: 700px;
            margin: 50px auto;
            padding: 20px;
            flex-grow: 1;
        }

        .details-card {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .details-card h4 {
            font-size: 1.5rem;
            color: #007bff;
            margin-bottom: 20px;
        }

        .row dt,
        .row dd {
            display: inline-block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            vertical-align: top;
        }

        .row dt {
            font-weight: bold;
            width: 30%;
            text-align: left;
        }

        .row dd {
            width: 65%;
            margin-left: 5%;
            text-align: left;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-dark {
            background-color: #343a40;
            color: white;
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btn-dark:hover {
            background-color: #23272b;
        }
    </style>
</head>
<body>

    <div class="containerD">
        <div class="details-card">
            <h4>Emergency Details</h4>
            <hr />
            <dl class="row">
                <dt>Description:</dt>
                <dd>@Html.DisplayFor(model => model.Description)</dd>

                <dt>Date Reported:</dt>
                <dd>@Html.DisplayFor(model => model.DateReported)</dd>

                <dt>Department:</dt>
                <dd>@Html.DisplayFor(model => model.Department.Name)</dd>
            </dl>

            <div class="button-group">
                <a class="btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="btn-dark" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</body>
</html>
