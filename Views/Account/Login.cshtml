@model LoginViewModel


@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="row justify-content-center">
    <div class="col-6">
<h2 class="pt-3">Login</h2>

<form class="pb-5 pt-3" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- This displays all errors -->
    <div class="mb-1 mt-3">
        <label class="mb-1" for="Email">Email</label>
        <input  asp-for="Email" class="form-control mb-1" />
        <span  asp-validation-for="Email" class="text-danger mb-1"></span> <!-- For specific field errors -->
    </div>

    <div class="mb-1">
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
    </div>
</div>