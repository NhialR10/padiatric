<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Padiatric</title>
    <link rel="stylesheet" href="~/css/bootwatchThemes.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Padiatric.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                         @if (User.IsInRole("Professor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Dashboard" asp-controller="Admin">Home</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Assistants" asp-controller="Admin">Assistants</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Appointments" asp-controller="Admin">Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Shifts" asp-controller="Admin">Shifts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Emergencies" asp-controller="Admin">Emergencies</a>
                        </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Departments" asp-action="Index">Departments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Announcements" asp-action="Index">Announcements</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Emergencies" asp-action="Index">Emergencies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Shifts" asp-action="Index">Shifts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Users">View All Users</a>
                            </li>
                        }
                        @if (User.IsInRole("Assistant"))
                        {
                           
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Assistant">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Assistant" asp-action="Appointments">Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="DutyRoster" asp-area="" asp-controller="Assistant">Duty Roster</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CreateAppointment" asp-controller="Assistant">Make An Appointment</a>
                            </li>
                        }
                    </ul>
                    <form class="d-flex" asp-action="Logout" asp-controller="Account" method="post">
                        <button type="submit" class="btn btn-danger">Logout</button>
                       
                    </form>
                    @* <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form> *@
                </div>
            </div>
        </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-primary footer text-muted">
        <div class="container text-light">
            &copy; 2024 - Padiatric 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
    }

</body>
</html>
