@model Padiatric.ViewModels.ProfessorDashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Department.Name - Department Details</title>
    <style>
        body {
            background-image: url('/images/professor-background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .containerp {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
            border-radius: 10px;
        }

            .header h1 {
                font-size: 2.5rem;
            }

        .section {
            background: rgba(0, 0, 0, 0.6);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

            .section h2 {
                font-size: 1.8rem;
                margin-bottom: 15px;
            }

            .section p {
                font-size: 1.25rem;
                line-height: 1.5;
            }

        .back-btn {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            padding: 10px 15px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 5px;
            margin-top: 20px;
            display: inline-block;
        }

            .back-btn:hover {
                background-color: rgba(255, 255, 255, 0.3);
            }
    </style>
</head>
<body>

    <div class="containerp">
        <!-- Header Section -->
        <div class="header">
            <h1>@Model.Department.Name</h1>
        </div>

        <!-- Department Details Section -->
        <div class="section">
            <h2>Department Details</h2>
            <p><strong>Name:</strong> @Model.Department.Name</p>
            <p><strong>Hasta Sayisi:</strong> @Model.Department.HastaSayisi</p>
            <p><strong>Bos Yatak Sayisi:</strong> @Model.Department.BosyatakSayisi</p>
        </div>

        <!-- Back Button -->
        <div>
            <a asp-action="Index" class="back-btn">Back to Dashboard</a>
        </div>
    </div>

</body>
</html>
