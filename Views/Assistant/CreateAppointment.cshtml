@using Padiatric.ViewModels
@model CreateAppointmentViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center text-primary mb-4">Make an Appointment</h2>
            <form asp-action="CreateAppointment" method="post" class="card shadow-sm p-4">
                <div class="mb-3">
                    <label for="professorSelect" class="form-label">Select Professor</label>
                    <select id="professorSelect" name="SelectedProfessorId" class="form-select" required>
                        <option value="">-- Choose a Professor --</option>
                        @foreach (var professor in Model.Professors)
                        {
                            <option value="@professor.Id">@professor.FirstName @professor.LastName</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="slotSelect" class="form-label">Select Date & Time</label>
                    <select id="slotSelect" name="SelectedSlot" class="form-select" required>
                        <option value="">-- Choose an Available Slot --</option>
                        @foreach (var slot in Model.AvailableSlots)
                        {
                            <option value="@slot.Value">@slot.Text</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="reason" class="form-label">Reason</label>
                    <textarea id="reason" name="Reason" class="form-control" rows="3" placeholder="Reason for the appointment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Book Appointment</button>
            </form>
        </div>
    </div>
</div>
