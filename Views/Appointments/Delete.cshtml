@model Padiatric.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f4f7fc;
            color: #333;
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .containerD {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            flex-grow: 1;
        }

        .form-card {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-card h3 {
            text-align: center;
            font-size: 1.8rem;
            margin-bottom: 30px;
            color: #d9534f;
        }

        .details-dl {
            margin: 20px 0;
        }

        .details-dl dt {
            font-weight: bold;
            font-size: 1.1rem;
            margin-bottom: 10px;
            padding-right: 20px; /* Add space for labels */
            white-space: nowrap; /* Prevent wrapping */
        }

        .details-dl dd {
            margin-bottom: 15px;
            font-size: 1.1rem;
            word-wrap: break-word; /* Allow wrapping for long content */
            padding-left: 30px; /* Add spacing between label and value */
        }

        .button-group {
            margin-top: 20px;
            display: flex;
            justify-content: flex-start;
            gap: 10px;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
            font-size: 1.1rem;
            padding: 12px 25px;
            border-radius: 5px;
        }

        .btn-danger:hover {
            background-color: #c9302c;
        }

        .btn-dark {
            background-color: #343a40;
            color: white;
            font-size: 1.1rem;
            padding: 12px 25px;
            border-radius: 5px;
        }

        .btn-dark:hover {
            background-color: #23272b;
        }
    </style>
</head>
<body>

    <div class="containerD">
        <div class="form-card">
            <h3>Are you sure you want to delete this Appointment?</h3>
            <hr />
            <dl class="details-dl row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AppointmentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppointmentDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reason)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reason)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Assistant)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Assistant.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Professor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Professor.FirstName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="button-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-dark" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
