@model Padiatric.Models.Announcement

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Delete - @Model.Title</title>
    <style>
        body {
            background-color: #f4f7fc;
            color: #333;
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .containerD {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            flex-grow: 1;
        }

        .form-card {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .form-card h4 {
                text-align: center;
                font-size: 2rem;
                margin-bottom: 30px;
                color: #333;
            }

        .details-section {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
        }

            .details-section dl {
                text-align: left;
            }

            .details-section dt {
                font-weight: bold;
                font-size: 1.1rem;
            }

            .details-section dd {
                margin-bottom: 15px;
                font-size: 1rem;
            }

        .button-group {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            font-size: 1.2rem;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
                text-decoration: none;
            }

        .btn-back {
            background-color: #343a40; /* Dark gray button */
            color: white;
            font-size: 1.2rem;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: #23272b; /* Even darker on hover */
                text-decoration: none;
            }
    </style>
</head>
<body>

    <div class="containerD">
        <div class="form-card">
            <h4>Delete Announcement</h4>
            <p>Are you sure you want to delete this announcement?</p>

            <div class="details-section">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Content)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Content)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DatePosted)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DatePosted)
                    </dd>
                </dl>

                <div class="button-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn-danger" />
                    </form>
                    <a class="btn-back" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
