@model Padiatric.Models.Announcement

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Edit - @Model.Title</title>
    <style>
        body {
            background-color: #f4f7fc;
            color: #333;
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .containerD {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
        }

        .form-card {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .form-card h4 {
                text-align: center;
                font-size: 2rem;
                margin-bottom: 30px;
                color: #333;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 1.1rem;
                color: #555;
            }

            .form-group input {
                font-size: 1rem;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ddd;
                width: 100%;
            }

                .form-group input[type="submit"] {
                    font-size: 1.2rem;
                    padding: 10px 20px;
                    border: none;
                    background-color: #007bff;
                    color: white;
                    border-radius: 5px;
                    cursor: pointer;
                }

                    .form-group input[type="submit"]:hover {
                        background-color: #0056b3;
                    }

        .button-group {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .btn-back, .btn-save {
            background-color: #343a40;
            color: white;
            font-size: 1.2rem;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            width: 48%;
            text-align: center;
        }

            .btn-back:hover, .btn-save:hover {
                background-color: #23272b;
                text-decoration: none;
            }

        .btn-save {
            background-color: #007bff;
        }

            .btn-save:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="containerD">
        <div class="form-card">
            <h4>Edit Announcement</h4>
            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DatePosted" class="control-label"></label>
                    <input asp-for="DatePosted" class="form-control" />
                    <span asp-validation-for="DatePosted" class="text-danger"></span>
                </div>

                <div class="button-group">
                    <input type="submit" value="Save" class="btn-save" />
                    <a class="btn-back" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
